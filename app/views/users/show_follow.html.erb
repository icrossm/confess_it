
<table summary = "Infomration about flollwing followers">
	<tr>
		<td class="main">
			<h1><%= @title %></h1>
			
			<% if @users.any?%>
			<ul class="users">
				<%= render @users%>
			</ul>
			<% end %>
		</td>
		<td class="sidebar round">
			<strong>Name</strong><%= @user.name%><br />
			
			<strong>Confessions</strong><%= @user.microposts.count%><br />
			
			<%= render 'shared/stats' %>
			
			<% if @users.any?%>
			<%  @users.each do |user|%>
			<%= link_to gravatar_for(user, :size => 30 ), user%>
			
			<% end %>
			<%end%>
		</td>
	</tr>
	
</table>
<%= will_paginate @users%>